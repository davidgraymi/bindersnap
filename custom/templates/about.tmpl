{{template "base/head" .}}
<div role="main" aria-label="{{ctx.Locale.Tr "about.heading"}}" class="about-page">
	
	<!-- 1. Hero Section (Split) -->
	<header class="about-hero">
		<div class="ui container">
			<div class="ui stackable middle aligned grid">
				<div class="eight wide column about-hero-content">
					<h1 class="ui header">{{ctx.Locale.Tr "about.heading"}}</h1>
					<h2 class="ui sub header">{{ctx.Locale.Tr "about.subheading"}}</h2>
				</div>
				<div class="eight wide center aligned column about-hero-graphic">
					<img src="{{AssetUrlPrefix}}/img/immutable_history.webp" alt="{{ctx.Locale.Tr "about.hero_graphic_alt"}}">
				</div>
			</div>
		</div>
	</header>

	<!-- 2. Narrative Section -->
	<section class="about-story ui text container">
		<h2 class="ui header">{{ctx.Locale.Tr "about.section_1_heading"}}</h2>
		<div>{{ctx.Locale.Tr "about.section_1_content"}}</div>
		
		<div class="about-pull-quote">
			"{{ctx.Locale.Tr "about.quote"}}"
		</div>

		<div>{{ctx.Locale.Tr "about.section_1_content_rest"}}</div>

		<h2 class="ui header">{{ctx.Locale.Tr "about.section_2_heading"}}</h2>
		<div>{{ctx.Locale.Tr "about.section_2_content"}}</div>
	</section>

	<!-- 3. Grid Section (Git for Everyone) -->
	<section class="about-grid-section">
		<div class="ui container">
			<div class="about-grid-header">
				<h2 class="ui header centered">{{ctx.Locale.Tr "about.section_3_heading"}}</h2>
			</div>
			<div class="ui stackable three column grid">
				<!-- Card 1: Branching -->
				<div class="column">
					<div class="about-grid-card">
						<div class="about-grid-icon">
							{{svg "octicon-git-branch" 48}}
						</div>
						<h3 class="ui header">{{ctx.Locale.Tr "about.section_3_col_1_heading"}}</h3>
						<p>{{ctx.Locale.Tr "about.section_3_col_1_content"}}</p>
					</div>
				</div>
				<!-- Card 2: Browser -->
				<div class="column">
					<div class="about-grid-card">
						<div class="about-grid-icon">
							{{svg "octicon-browser" 48}}
						</div>
						<h3 class="ui header">{{ctx.Locale.Tr "about.section_3_col_2_heading"}}</h3>
						<p>{{ctx.Locale.Tr "about.section_3_col_2_content"}}</p>
					</div>
				</div>
				<!-- Card 3: Shield -->
				<div class="column">
					<div class="about-grid-card">
						<div class="about-grid-icon">
							{{svg "octicon-shield-check" 48}}
						</div>
						<h3 class="ui header">{{ctx.Locale.Tr "about.section_3_col_3_heading"}}</h3>
						<p>{{ctx.Locale.Tr "about.section_3_col_3_content"}}</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- 4. Founder Section -->
	<section class="about-founder-section">
		<div class="ui container">
			<div class="about-founder-card">
				<div class="about-founder-image">
					<!-- Placeholder Headshot -->
					<img class="about-founder-headshot" src="{{AssetUrlPrefix}}/img/avatar_default.png" alt="David Gray">
				</div>
				<div class="about-founder-content">
					<h2 class="ui header">{{ctx.Locale.Tr "about.section_5_heading"}}</h2>
					<span class="about-founder-name">{{ctx.Locale.Tr "about.section_5_content"}}</span>
					<p class="about-founder-bio">{{ctx.Locale.Tr "about.section_5_bio"}}</p>
					<div class="about-founder-badges">
						<span class="about-education-badge">{{ctx.Locale.Tr "about.education_bs"}}</span>
						<span class="about-education-badge">{{ctx.Locale.Tr "about.education_ms_candidate"}}</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- 5. Future Section -->
	<section class="about-future-section">
		<div class="about-future-content ui text container">
			<h2 class="ui header inverted">{{ctx.Locale.Tr "about.future_heading"}}</h2>
			<p>{{ctx.Locale.Tr "about.future_content"}}</p>
		</div>
	</section>

</div>
{{template "base/footer" .}}
